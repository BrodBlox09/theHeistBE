{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "theheist:recharge_station",
            "is_experimental": false,
            "menu_category": {
                "category": "construction"
            },
            "properties": {
                "theheist:state": [1, 2, 3],
                "theheist:rotation": [2, 3, 4, 5]
            }
        },
        "events": {
            "theheist:set_rotation": {
                "set_block_property": {
                    "theheist:rotation": "(query.cardinal_facing_2d)"
                }
            }
        },
        "components": {
            "minecraft:on_player_placing": {
                "event": "theheist:set_rotation"
            },
            "minecraft:selection_box": {
                "origin": [-6, 0, -6],
                "size": [12, 16, 12]
            },
            "minecraft:collision_box": {
                "origin": [-6, 0, -6],
                "size": [12, 16, 12]
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('theheist:rotation') == 2",
                "components": {
                    "minecraft:rotation": [0, 180, 0]
                }
            },
            {
                "condition": "query.block_property('theheist:rotation') == 3",
                "components": {
                    "minecraft:rotation": [0, 0, 0]
                }
            },
            {
                "condition": "query.block_property('theheist:rotation') == 4",
                "components": {
                    "minecraft:rotation": [0, 270, 0]
                }
            },
            {
                "condition": "query.block_property('theheist:rotation') == 5",
                "components": {
                    "minecraft:rotation": [0, 90, 0]
                }
            },

            {
                "condition": "query.block_property('theheist:state') == 1",
                "components": {
                    "minecraft:geometry": "geometry.recharge_station_base",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "recharge_station_1"
                        }
                    }
                }
            },
            {
                "condition": "query.block_property('theheist:state') == 2",
                "components": {
                    "minecraft:geometry": "geometry.recharge_station_gameband",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "recharge_station_2"
                        }
                    }
                }
            },
            {
                "condition": "query.block_property('theheist:state') == 3",
                "components": {
                    "minecraft:geometry": "geometry.recharge_station_base",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "recharge_station_3"
                        }
                    }
                }
            }
        ]
    }
}