{
    "format_version": "1.20.10",
    "minecraft:block": {
        "description": {
            "identifier": "theheist:robot_path",
            "is_experimental": false,
            "menu_category": {
                "category": "construction"
            },
            "properties": {
                "theheist:north": [1, 0],
                "theheist:south": [1, 0],
                "theheist:east": [1, 0],
                "theheist:west": [1, 0]
            }
        },
        "events": {
            "theheist:update": {
                "sequence": [
                    {
                        "condition": "query.block_neighbor_has_any_tag(0, 0, -1, 'robot_path')",
                        "set_block_property": {
                            "theheist:north": 1
                        }
                    },
                    {
                        "condition": "!query.block_neighbor_has_any_tag(0, 0, -1, 'robot_path')",
                        "set_block_property": {
                            "theheist:north": 0
                        }
                    },
                    {
                        "condition": "query.block_neighbor_has_any_tag(0, 0, 1, 'robot_path')",
                        "set_block_property": {
                            "theheist:south": 1
                        }
                    },
                    {
                        "condition": "!query.block_neighbor_has_any_tag(0, 0, 1, 'robot_path')",
                        "set_block_property": {
                            "theheist:south": 0
                        }
                    }, //
                    {
                        "condition": "query.block_neighbor_has_any_tag(-1, 0, 0, 'robot_path')",
                        "set_block_property": {
                            "theheist:west": 1
                        }
                    },
                    {
                        "condition": "!query.block_neighbor_has_any_tag(-1, 0, 0, 'robot_path')",
                        "set_block_property": {
                            "theheist:west": 0
                        }
                    },
                    {
                        "condition": "query.block_neighbor_has_any_tag(1, 0, 0, 'robot_path')",
                        "set_block_property": {
                            "theheist:east": 1
                        }
                    },
                    {
                        "condition": "!query.block_neighbor_has_any_tag(1, 0, 0, 'robot_path')",
                        "set_block_property": {
                            "theheist:east": 0
                        }
                    }
                ]
            }
        },
        "components": {
            "minecraft:collision_box": false,
            "minecraft:selection_box": {
                "origin": [-8, 0, -8],
                "size": [16, 1, 16]
            },
            "minecraft:material_instances": {
                "center": {
                    "texture": "robot_path_crossed",
                    "ambient_occlusion": false,
                    "render_method": "alpha_test",
                    "face_dimming": false
                },
                "*": {
                    "texture": "robot_path_straight",
                    "ambient_occlusion": false,
                    "render_method": "alpha_test",
                    "face_dimming": false
                }
            },
            "minecraft:geometry": {
                "identifier": "geometry.robot_path",
                "bone_visibility": {
                    "north": "q.block_property('theheist:north')",
                    "west": "q.block_property('theheist:west')",
                    "east": "q.block_property('theheist:east')",
                    "south": "q.block_property('theheist:south')",
                    "center": "(q.block_property('theheist:north') + q.block_property('theheist:west') + q.block_property('theheist:east') + q.block_property('theheist:south') == 0) || ((q.block_property('theheist:north') || q.block_property('theheist:south')) && (q.block_property('theheist:east') || q.block_property('theheist:west')))"
                }
            },
            "minecraft:queued_ticking": {
                "looping": true,
                "interval_range": [1,1],
                "on_tick": {
                    "event": "theheist:update"
                }
            },
            "tag:robot_path": {}
        }
    }
}