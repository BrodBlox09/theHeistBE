{
    "format_version": "1.21.30",
    "minecraft:block": {
        "description": {
            "identifier": "theheist:custom_door_1_bottom",
            "is_experimental": false,
            "register_to_creative_menu": true,
            "menu_category": {
                "category": "construction",
                "group": "itemGroup.name.door"
            },
            "states": {
                "theheist:rotation": [2, 3, 4, 5],
                "theheist:unlocked": [true, false],
                "theheist:open": [false, true]
            }
        },
        "components": {
            "minecraft:material_instances": {
                "door_handle": {
                    "texture": "custom_door_1_handle"
                },
                "*": {
                    "texture": "custom_door_1_bottom"
                }
            },
            "minecraft:collision_box": {
                "origin": [-8, 0, -8],
                "size": [16, 16, 3]
            },
            "minecraft:selection_box": {
                "origin": [-8, 0, -8],
                "size": [16, 16, 3]
            },
            "minecraft:geometry": "geometry.custom_door_1_bottom",
            "minecraft:light_dampening": 0,
            "minecraft:custom_components": [
                "theheist:bottom_door"
            ]
        },
        "permutations": [
            {
                "condition": "query.block_state('theheist:rotation') == 2 && query.block_state('theheist:open') == false",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 180, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 3 && query.block_state('theheist:open') == false",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 0, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 4 && query.block_state('theheist:open') == false",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 270, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 5 && query.block_state('theheist:open') == false",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 2 && query.block_state('theheist:open') == true",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 3 && query.block_state('theheist:open') == true",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 270, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 4 && query.block_state('theheist:open') == true",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 180, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 5 && query.block_state('theheist:open') == true",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 0, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:open') == true",
                "components": {
                    "tag:open": {}
                }
            },
            {
                "condition": "query.block_state('theheist:open') == false",
                "components": {
                    "tag:closed": {}
                }
            }
        ]
    }
}