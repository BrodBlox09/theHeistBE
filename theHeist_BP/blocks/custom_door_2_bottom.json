{
    "format_version": "1.21.70",
    "minecraft:block": {
        "description": {
            "identifier": "theheist:custom_door_2_bottom",
            "menu_category": {
                "category": "construction",
                "group": "minecraft:itemGroup.name.door"
            },
            "states": {
                "theheist:rotation": [2, 3, 4, 5],
                "theheist:unlocked": [true, false],
                "theheist:open": [false, true]
            },
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [ "minecraft:cardinal_direction" ]
                }
            }
        },
        "components": {
            "minecraft:material_instances": {
                "anvil_base": {
                    "texture": "anvil_base",
                    "render_method": "alpha_test"
                },
                "iron_block": {
                    "texture": "fake_iron_block",
                    "render_method": "alpha_test"
                },
                "glass": {
                    "texture": "glass",
                    "render_method": "alpha_test"
                },
                "*": {
                    "texture": "door_iron_lower_a",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:collision_box": {
                "origin": [-8, 0, -8],
                "size": [16, 16, 3]
            },
            "minecraft:selection_box": {
                "origin": [-8, 0, -8],
                "size": [16, 16, 3]
            },
            "minecraft:geometry": "geometry.custom_door_2_bottom",
            "minecraft:light_dampening": 0,
            "minecraft:custom_components": [
                "theheist:bottom_door"
            ]
        },
        "permutations": [
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'north' && query.block_state('theheist:open') == false",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 180, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'south' && query.block_state('theheist:open') == false",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 0, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'west' && query.block_state('theheist:open') == false",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 270, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'east' && query.block_state('theheist:open') == false",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'north' && query.block_state('theheist:open') == true",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'south' && query.block_state('theheist:open') == true",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 270, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'west' && query.block_state('theheist:open') == true",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 180, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'east' && query.block_state('theheist:open') == true",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 0, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:open') == true",
                "components": {
                    "tag:open": {}
                }
            },
            {
                "condition": "query.block_state('theheist:open') == false",
                "components": {
                    "tag:closed": {}
                }
            }
        ]
    }
}