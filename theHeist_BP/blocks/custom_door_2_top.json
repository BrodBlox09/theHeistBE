            },
            {
                "condition": "query.block_state('theheist:rotation') == 4 && query.block_state('theheist:open') == false",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 270, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 5 && query.block_state('theheist:open') == false",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 2 && query.block_state('theheist:open') == true",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 3 && query.block_state('theheist:open') == true",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 270, 0] }
                }
            },
            {
