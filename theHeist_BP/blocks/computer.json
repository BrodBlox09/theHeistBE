{
    "format_version": "1.21.70",
    "minecraft:block": {
        "description": {
            "identifier": "theheist:computer",
            "menu_category": {
                "category": "equipment"
            },
            "states": {
                "theheist:unlocked": [0, 1, 2],
                "theheist:screensaver": [0, 1, 2, 3, 4, 5, 6]
            },
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [ "minecraft:cardinal_direction" ]
                }
            }
        },
        "components": {
            "minecraft:collision_box": false,
            "minecraft:selection_box": {
                "origin": [-7, 0, 7],
                "size": [14, 13, -3]
            },
            "minecraft:light_dampening": 0
        },
        "permutations": [
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'north'",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 180, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'east'",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'south'",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 0, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'west'",
                "components": {
                    "minecraft:transformation": { "rotation": [0, -90, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:screensaver') == 0",
                "components": {
                    "minecraft:geometry": "geometry.computer_hackable"
                }
            },
            {
                "condition": "query.block_state('theheist:screensaver') != 0",
                "components": {
                    "minecraft:geometry": "geometry.computer_screensaver"
                }
            },
            {
                "condition": "query.block_state('theheist:unlocked') == 0 && query.block_state('theheist:screensaver') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "screen": {
                            "texture": "locked_screen"
                        },
                        "*": {
                            "texture": "computer_base_animated"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('theheist:unlocked') == 1 && query.block_state('theheist:screensaver') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "screen": {
                            "texture": "noise"
                        },
                        "*": {
                            "texture": "computer_base"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('theheist:unlocked') == 2 && query.block_state('theheist:screensaver') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "screen": {
                            "texture": "unlocked_screen"
                        },
                        "*": {
                            "texture": "computer_base"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('theheist:screensaver') == 1",
                "components": {
                    "minecraft:material_instances": {
                        "screen": {
                            "texture": "computer_screensaver_1"
                        },
                        "*": {
                            "texture": "computer_base",
                            "ambient_occlusion": false
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('theheist:screensaver') == 2",
                "components": {
                    "minecraft:material_instances": {
                        "screen": {
                            "texture": "computer_screensaver_2"
                        },
                        "*": {
                            "texture": "computer_base",
                            "ambient_occlusion": false
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('theheist:screensaver') == 3",
                "components": {
                    "minecraft:material_instances": {
                        "screen": {
                            "texture": "computer_screensaver_3"
                        },
                        "*": {
                            "texture": "computer_base",
                            "ambient_occlusion": false
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('theheist:screensaver') == 4",
                "components": {
                    "minecraft:material_instances": {
                        "screen": {
                            "texture": "computer_screensaver_4"
                        },
                        "*": {
                            "texture": "computer_base",
                            "ambient_occlusion": false
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('theheist:screensaver') == 5",
                "components": {
                    "minecraft:material_instances": {
                        "screen": {
                            "texture": "computer_screensaver_5"
                        },
                        "*": {
                            "texture": "computer_base",
                            "ambient_occlusion": false
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('theheist:screensaver') == 6",
                "components": {
                    "minecraft:material_instances": {
                        "screen": {
                            "texture": "computer_screensaver_6"
                        },
                        "*": {
                            "texture": "computer_base",
                            "ambient_occlusion": false
                        }
                    }
                }
            }
        ]
    }
}