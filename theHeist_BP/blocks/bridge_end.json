{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "theheist:bridge_end",
            "is_experimental": false,
            "menu_category": {
                "category": "construction"
            },
            "properties": {
                "theheist:rotation": [2, 3, 4, 5]
            }
        },
        "events": {
            "theheist:set_rotation": {
                    "set_block_property": {
                        "theheist:rotation": "(query.cardinal_facing_2d)"
                    }
            }
        },
        "components": {
            "minecraft:material_instances": {
                "north": {
                    "texture": "bridge_end_front"
                },
                "*": {
                    "texture": "bridge_end_side"
                }
            },
            "minecraft:geometry": "geometry.normal",
            "minecraft:on_player_placing": {
                "event": "theheist:set_rotation"
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('theheist:rotation') == 2",
                "components": {
                    "minecraft:rotation": [0, 180, 0]
                }
            },
            {
                "condition": "query.block_property('theheist:rotation') == 3",
                "components": {
                    "minecraft:rotation": [0, 0, 0]
                }
            },
            {
                "condition": "query.block_property('theheist:rotation') == 4",
                "components": {
                    "minecraft:rotation": [0, 270, 0]
                }
            },
            {
                "condition": "query.block_property('theheist:rotation') == 5",
                "components": {
                    "minecraft:rotation": [0, 90, 0]
                }
            }
        ]
    }
}