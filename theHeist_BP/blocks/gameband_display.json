{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "theheist:gameband_display",
            "is_experimental": false,
            "menu_category": {
                "category": "construction"
            },
            "properties": {
                "theheist:rotation": [2, 3, 4, 5]
            }
        },
        "events": {
            "theheist:set_rotation": {
                "set_block_property": {
                    "theheist:rotation": "(query.cardinal_facing_2d)"
                }
            }
        },
        "components": {
            "minecraft:selection_box": {
                "origin":[ -6, 0, -6 ],
                "size": [ 12, 16, 12 ]
            },
            "minecraft:on_player_placing": {
                "event": "theheist:set_rotation"
            },
            "minecraft:geometry": "geometry.gameband_display",
            "minecraft:material_instances": {
                "power_green": {
                    "texture": "power_green"
                },
                "quartz_theme_side": {
                    "texture": "quartz_theme_side"
                },
                "quartz_theme_top": {
                    "texture": "quartz_theme_top"
                },
                "command_decoration": {
                    "texture": "command_decoration"
                },
                "gray_base": {
                    "texture": "gray_base"
                },
                "unlocked_screen": {
                    "texture": "unlocked_screen"
                },
                "*": {
                    "texture": "gray_base"
                }
            },
            "minecraft:light_dampening": 0
        },
        "permutations": [
            {
                "condition": "query.block_property('theheist:rotation') == 2",
                "components": {
                    "minecraft:rotation": [0, 180, 0]
                }
            },
            {
                "condition": "query.block_property('theheist:rotation') == 3",
                "components": {
                    "minecraft:rotation": [0, 0, 0]
                }
            },
            {
                "condition": "query.block_property('theheist:rotation') == 4",
                "components": {
                    "minecraft:rotation": [0, 270, 0]
                }
            },
