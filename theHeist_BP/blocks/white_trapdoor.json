{
    "format_version": "1.21.30",
    "minecraft:block": {
        "description": {
            "identifier": "theheist:white_trapdoor",
            "is_experimental": false,
            "menu_category": {
                "category": "construction"
            },
            "states": {
                "theheist:isopen": [false, true],
                "theheist:locked": [false, true],
                "theheist:rotation": [2, 3, 4, 5]
            }
        },
        "components": {
            "minecraft:material_instances": {
                "*": {
                    "texture": "white_trapdoor"
                }
            },
            "minecraft:custom_components": [
                "theheist:directional_block",
                "theheist:trapdoor"
            ],
            "tag:one_way_collidable": {} // Prevents the player from being pushed out by the trapdoor collision, just like vanilla
        },
        "permutations": [
            {
                "condition": "query.block_state('theheist:rotation') == 2",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 180, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 3",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 0, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 4",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 270, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:rotation') == 5",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
            },
            {
                "condition": "query.block_state('theheist:isopen') == true",
                "components": {
                    "minecraft:geometry": "geometry.white_trapdoor_open",
                    "minecraft:selection_box": {
                        "origin": [-8, 0, 5],
                        "size": [16, 16, 3]
                    },
                    "minecraft:collision_box": {
                        "origin": [-8, 0, 5],
                        "size": [16, 16, 3]
                    }
                }
            },
            {
                "condition": "query.block_state('theheist:isopen') == false",
                "components": {
                    "minecraft:geometry": "geometry.white_trapdoor_closed",
                    "minecraft:selection_box": {
                        "origin": [-8, 0, -8],
                        "size": [16, 3, 16]
                    },
                    "minecraft:collision_box": {
                        "origin": [-8, 0, -8],
                        "size": [16, 3, 16]
                    }
                }
            }
        ]
    }
}