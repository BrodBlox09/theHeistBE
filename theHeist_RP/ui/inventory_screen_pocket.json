{
	"namespace": "crafting_pocket",
	"left_panel/recipe_book_tab_content": {
		"modifications": [
			{
				"array_name": "controls",
				"operation": "insert_back",
				"value": {
					"select_inventory_label@inventory_display.label": {
						"text": "Select the chest icon to view your inventory",
						"size": [ "80%", "default" ],
						"visible": "(not $show_dev_view)"
					}
				}
			}
		]
	},
	"left_panel": {
		"modifications": [
			{
				"control_name": "inventory_tab_content",
				"operation": "replace",
				"value": {
					"inventory_tab_content_not_dev_view@inventory_display.pocket_inventory_tab_content": { "$maximum_grid_items": 5, "$show_when_dev_view": false }
				}
			},
			{
				"array_name": "controls",
				"operation": "insert_front",
				"value": {
					"inventory_tab_content_dev_view@inventory_display.pocket_inventory_tab_content": {}
				}
			}
		]
	},
	"left_tab": { "visible": "$show_dev_view" },
	// Unfortunately this tab cannot be removed because if the player starts out on a different tab there would
	// be no way to select the inventory (unless inventory tab is always shown... but this would have to also
	// track that the player is not in dev_view mode)
	"inventory_tab": {
		"visible": true
	},
	"survival_panel_pocket@inventory_display.pocket_crafting_panel": {}, // Hide the 2x2 grid in the inventory
	"survival_panel_crafting_pocket@inventory_display.pocket_crafting_panel": {}, // Hide the 3x3 grid in the crafting table GUI
	"crafting_tab": {
		"visible": false
	},
	// Set chest, legs, feet, and offhand cells to only be visible when player is in dev_view mode
	"pocket_armor_tab_content/equipment_and_renderer/equipment/armor_grid/chest_grid_item": { "visible": "$show_dev_view" },
	"pocket_armor_tab_content/equipment_and_renderer/equipment/armor_grid/legs_grid_item": { "visible": "$show_dev_view" },
	"pocket_armor_tab_content/equipment_and_renderer/equipment/armor_grid/feet_grid_item": { "visible": "$show_dev_view" },
	"pocket_armor_tab_content/equipment_and_renderer/equipment/offhand_grid": { "visible": "$show_dev_view" }
}