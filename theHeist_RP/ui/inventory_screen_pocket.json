{
	"namespace": "crafting_pocket",
	"left_panel/recipe_book_tab_content": {
		"modifications": [
			{
				"array_name": "controls",
				"operation": "insert_back",
				"value": {
					"select_inventory_label@inventory_display.label": {
						"text": "Select the chest icon to view your inventory",
						"size": [ "80%", "default" ],
						"bindings": [
							{
								"binding_name": "(not #is_creative_mode)",
								"binding_name_override": "#visible"
							}
						]
					}
				}
			}
		]
	},
	"survival_inventory_grid": { // For some reason I am unable to access the grid control directly, so overwrite it here
		"controls": [
      		{ "inventory_grid@crafting.scroll_grid": { "maximum_grid_items": 5, "bindings": [] } }
    	]
	},
	"left_tab": {
		"bindings": [
			{
				"binding_name": "#is_creative_mode",
				"binding_name_override": "#visible"
			}
		]
	},
	// Unfortunately this tab cannot be removed because if the player starts out on a different tab there would
	// be no way to select the inventory (unless inventory tab is always shown...)
	"inventory_tab": {
		"bindings": []
	},
	"survival_panel_pocket@inventory_display.pocket_crafting_panel": {}, // 2x2 grid in the inventory
	"survival_panel_crafting_pocket@inventory_display.pocket_crafting_panel": {}, // 3x3 grid in the crafting table GUI
	"crafting_tab": {
		"visible": false
	},
	"pocket_armor_tab_content/equipment_and_renderer/equipment": {
		"modifications": [
			{
				"control_name": "offhand_grid",
				"operation": "remove"
			}
		]
	},
	"pocket_armor_tab_content/equipment_and_renderer/equipment/armor_grid": {
		"modifications": [
			{
				"control_name": "chest_grid_item",
				"operation": "remove"
			},
			{
				"control_name": "legs_grid_item",
				"operation": "remove"
			},
			{
				"control_name": "feet_grid_item",
				"operation": "remove"
			}
		]
	}
}