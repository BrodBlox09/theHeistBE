{
	"namespace": "inventory_display",
	"desktop_inventory": {
		"type": "panel",
		"size": [ "100%", "100% - 27px" ],
		"anchor_from": "bottom_middle",
		"anchor_to": "bottom_middle",
		"offset": [ 0, -27 ],
		"controls": [
			{
				"inventory_grid": {
					"type": "grid",
					"grid_dimensions": [ 5, 1 ],
					"grid_item_template": "common.grid_item_for_inventory",
					"collection_name": "inventory_items"
				}
			}
		],
		"visible": "(not $show_dev_view)"
	},
	"label": {
		"type": "label",
		"color": "$title_text_color",
		"text_alignment": "center"
	},
	"pocket_crafting_panel": {
		"type": "panel",
		"controls": [
			{
				"select_equipment_label@inventory_display.label": {
					"text": "Select the armor icon to view your equipment",
					"size": [ "80%", "default" ],
					"layer": 2
				}
			}
		]
	},
	"pocket_inventory_tab_content@crafting_pocket.inventory_tab_content": {
		"$scrolling_pane_control": "inventory_display.pocket_inventory_scroll_panel",
		"$show_when_dev_view|default": true,
		"visible": "($show_dev_view = $show_when_dev_view)"
	},
	"pocket_inventory_scroll_panel@crafting_pocket.survival_scroll_panel": {
		"$scrolling_content": "inventory_display.pocket_inventory_grid"
	},
	"pocket_inventory_grid@crafting_pocket.survival_inventory_grid": {
		"controls": [
			{
				"limited_inventory_grid@crafting.scroll_grid": {
					"$maximum_grid_items|default": 27,
					"maximum_grid_items": "$maximum_grid_items",
					"bindings": []
				}
			}
		]
	}
}