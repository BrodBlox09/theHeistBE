{
	"namespace": "inventory_display",
	"desktop_inventory": {
		"type": "panel",
		"size": [ "100%", "100% - 27px" ],
		"anchor_from": "bottom_middle",
		"anchor_to": "bottom_middle",
		"offset": [ 0, -27 ],
		"controls": [
			{
				"inventory_grid": {
					"type": "grid",
					"grid_dimensions": [ 5, 1 ],
					"grid_item_template": "common.grid_item_for_inventory",
					"collection_name": "inventory_items"
				}
			}
		]
	},
	"tab_content_no_search@crafting.tab_content": {
		"controls": [
			{
				"tab_content_search_bar_panel": {
					"type": "stack_panel",
					"size": [
						"100% - 12px",
						"100% - 12px"
					],
					"orientation": "vertical",
					"controls": [
						{
							"scroll_pane@$scrolling_pane_control": {
								"size": [
									"100%",
									"fill"
								]
							}
						}
					]
				}
			},
			{
				"nodrop_zone@common.root_panel": {
					"anchor_from": "center",
					"anchor_to": "center",
					"size": [
						"100%",
						"100%"
					],
					"layer": 2,
					"bindings": [
						{
							"binding_type": "global",
							"binding_name": "#is_left_tab_inventory",
							"binding_name_override": "#visible"
						}
					]
				}
			}
		]
	},
	// ---------------
	// Pocket inventory
	// ---------------
	"no_search_pocket_inventory_tab_content@inventory_display.tab_content_no_search": {
		"$scrolling_pane_control": "inventory_display.pocket_inventory_scroll_panel"
	},
	"pocket_inventory_scroll_panel@crafting_pocket.survival_scroll_panel": {
		"$scrolling_content": "inventory_display.pocket_inventory_grid"
	},
	"pocket_inventory_grid@crafting_pocket.survival_inventory_grid": {
		"controls": [
			{
				"limited_inventory_grid@crafting.scroll_grid": {
					"$maximum_grid_items|default": 27,
					"maximum_grid_items": "$maximum_grid_items",
					"bindings": []
				}
			}
		]
	},
	"pocket_left_panel@crafting_pocket.left_panel": {
		"controls": [
			{
				"left_background@common.common_panel": {
					"$dialog_background": "common.dialog_background_opaque",
					"$show_close_button": false
				}
			},
			{
				"inventory_tab_content@crafting_pocket.inventory_tab_content": {
					"bindings": []
				}
			}
		]
	},
	// ---------------
	// Pocket container
	// ---------------
	"pocket_inventory_half_screen@pocket_containers.half_screen": {
		"$container_size": 5,
		"$pane_collection": "inventory_items",
		// Required, otherwise it tries to get inventory_panel@inventory_display.inventory_panel and SILENTLY FAILS, NO ERRORS,
		// because pocket_containers defines it as "inventory_panel@inventory_panel" instead of "inventory_panel@pocket_containers.inventory_panel"
		"controls": [
			{
				"inventory_panel@pocket_containers.inventory_panel": {}
			}
		]
	},
	// ---------------
	// @-base elements
	// ---------------
	"label": {
		"type": "label",
		"color": "$title_text_color",
		"text_alignment": "center"
	},
	"filler": {
		"type": "panel",
		"size": [ "fill", "100%" ]
	}
}