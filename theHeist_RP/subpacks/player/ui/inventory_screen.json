{
	"namespace": "crafting",
	"player_armor_panel": {
		"anchor_to": "top_middle",
		"anchor_from": "top_middle",
		"offset": [ -8, 0 ]
	},
	"player_armor_panel/armor_grid/head_grid_item": { "$show_head_grid_item|default": true, "visible": "$show_head_grid_item" },
	"player_armor_panel/armor_grid/chest_grid_item": { "visible": false },
	"player_armor_panel/armor_grid/legs_grid_item": { "visible": false },
	"player_armor_panel/armor_grid/feet_grid_item": { "visible": false },
	"player_armor_panel/offhand_grid": { "visible": false },
	"crafting_panel_2x2": { "visible": false },
	"recipe_book/gamepad_helper_bumpers": { "visible": false },
	"tab_navigation_panel_layout": { "visible": false },
	"recipe_inventory_screen_content": {
		"modifications": [
			{
				"control_name": "content_stack_panel",
				"operation": "replace",
				"value": [
					{
						"content_panel": {
							"type": "panel",
							"controls": [
								{
									"content_panel_normal": {
										"type": "stack_panel",
										"size": [
											"100%cm",
											166
										],
										"orientation": "horizontal",
										"controls": [
											{
												"player_inventory@crafting.player_inventory": {}
											},
											{
												"toolbar_anchor": {
													"type": "panel",
													"size": [
														0,
														"100%"
													],
													"controls": [
														{
															"toolbar_panel@crafting.toolbar_panel": {
																"anchor_from": "top_right",
																"anchor_to": "bottom_right"
															}
														}
													]
												}
											}
										]
									}
								}
							]
						}
					}
				]
			}
		]
	},
	"toolbar_panel/toolbar_background/toolbar_stack_panel/creative_layout_toggle_panel": { "visible": false, "bindings": [] },
	"toolbar_panel/toolbar_background/toolbar_stack_panel/padding_1": { "visible": false, "bindings": [] },
	"toolbar_panel/toolbar_background/toolbar_stack_panel/recipe_book_layout_toggle_panel_survival": { "visible": false, "bindings": [] },
	"toolbar_panel/toolbar_background/toolbar_stack_panel/recipe_book_layout_toggle_panel_creative": { "visible": false, "bindings": [] }, // Duplicate of above for some reason
	"toolbar_panel/toolbar_background/toolbar_stack_panel/padding_2": { "visible": false, "bindings": [] },
	"toolbar_panel/toolbar_background/toolbar_stack_panel/survival_layout_toggle_panel": { "visible": false, "bindings": [] },
	"toolbar_panel/toolbar_background/toolbar_stack_panel/padding_3": { "visible": false, "bindings": [] },
	// Head grid item must be hidden on crafting screen since the player doll is not centered otherwise. It is centered with just the head grid item on the inventory screen.
	"crafting_screen": { "$show_head_grid_item": false, "$top_half_variant": "crafting.survival_panel_top_half" }
}